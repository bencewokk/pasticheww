<!doctype html>
<html lang="{{ shop.locale }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ shop.name }}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="{{ 'styles.css' | asset_url }}">
    {{ content_for_header }}
  </head>
  <body>
    <canvas class="background-particles" id="particleCanvas"></canvas>

    <header class="header">
      <div class="store-name-container" id="storeNameContainer">
        <h1 class="store-name-outline">{{ shop.name }}</h1>
        <h1 class="store-name-filled" id="storeNameFilled">{{ shop.name }}</h1>
      </div>

      <!-- Move password container outside store-name-container -->
      <div class="password-container" id="passwordContainer">
        <input
          type="password"
          id="passwordInput"
          class="password-input"
          placeholder="Enter Password"
          autocomplete="off"
        >
        <button id="passwordSubmit" class="password-submit">Unlock â†’</button>
        <p id="passwordError" class="password-error">Incorrect Code</p>
      </div>
    </header>

    <div class="sidebar-container" id="sidebarContainer">
      <div class="sidebar">
        <nav class="sidebar-nav">
          <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">Shop</a></li>
            <li><a href="#">Cart</a></li>
            <li><a href="#">Contact</a></li>
          </ul>
        </nav>
        <!-- Cart Section -->
        <div class="cart-section">
          <div class="cart-header">
            <h3>Your Cart</h3>
            <span class="cart-count">0 items</span>
          </div>
          <div class="cart-items"></div>
          <div class="cart-footer">
            <div class="cart-total">
              <span>Total:</span>
              <span class="total-price">$0.00</span>
            </div>
            <button class="checkout-button">Checkout</button>
          </div>
        </div>
      </div>
    </div>

    <div class="content-wrapper" id="contentWrapper">
      <div class="container">
        {{ content_for_layout }}
      </div>
    </div>

    <div class="created-by">
      <p>
        site created by <span class="creator-name">bencewok</span>
        <a href="https://instagram.com/bencewok" class="creator-link" target="_blank">instagram</a>
        {% comment %} <a href="https://bencewok.com" class="creator-link" target="_blank">bencewokk.com</a> {% endcomment %}
      </p>
    </div>

    <script type="module" src="{{ 'scripts.js' | asset_url }}"></script>
  </body>
</html>
