<!doctype html>
<html lang="{{ shop.locale }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ shop.name }}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="{{ 'styles.css' | asset_url }}">
    {{ content_for_header }}
  </head>
  <body>
    <canvas class="background-particles" id="particleCanvas"></canvas>

    <header class="header">
      <div class="store-name-container" id="storeNameContainer">
        <img src="{{ 'logo.png' | asset_url }}" alt="Logo" class="site-logo" id="siteLogo" width="120" height="60">
        <span id="storeNameFilled" class="store-name-filled"></span>
      </div>

      <div class="newsletter-container" id="newsletterContainer">
        <h2>Stay Updated</h2>
        <p>Subscribe to our newsletter for exclusive updates</p>
        <form id="newsletterForm" class="newsletter-form">
          <input
            type="email"
            id="newsletterEmail"
            class="newsletter-input"
            placeholder="Enter your email"
            required
          >
          <button type="submit" id="newsletterSubmit" class="newsletter-submit">Subscribe</button>
        </form>
        <p id="newsletterSuccess" class="newsletter-success">Thank you for subscribing!</p>
        <p id="newsletterError" class="newsletter-error">Please enter a valid email address</p>
        <button id="skipNewsletter" class="skip-newsletter">Skip for now</button>
      </div>

      <div class="password-container" id="passwordContainer">
        <input
          type="password"
          id="passwordInput"
          class="password-input"
          placeholder="Enter Password"
          autocomplete="off"
        >
        <button id="passwordSubmit" class="password-submit">Unlock â†’</button>
        <p id="passwordError" class="password-error">Incorrect Code</p>
      </div>
    </header>

    <div class="content-wrapper" id="contentWrapper">
      <div class="container">
        {{ content_for_layout }}
      </div>
    </div>

    <div class="created-by">
      <p>
        site created by <span class="creator-name">bencewok</span>
        <a href="https://instagram.com/bencewok" class="creator-link" target="_blank">instagram</a>
      </p>
    </div>

    <script type="module" src="{{ 'scripts.js' | asset_url }}"></script>
  </body>
</html>

