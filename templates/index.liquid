<div class="split-layout">
  <div class="split-left">
    <div class="split-content">
      <div class="section-header">
        <h2>Miami</h2>
        <p>
          Neon dreams and electric nights. Experience the vibrant energy of the 80s with interactive visuals that
          respond to your every move.
        </p>
      </div>

      <div class="product-display">
        <div class="product-item">
          <div class="product-layout">
            <img
              src="{{ 'shortsph.png' | asset_url }}"
              alt="Miami Shorts"
              class="product-image"
              width="150"
              height="150"
            >
            <div class="product-controls">
              <h3 class="product-title">Miami Shorts</h3>
              <div class="size-selector">
                <button class="size-btn" data-size="S">S</button>
                <button class="size-btn" data-size="M">M</button>
                <button class="size-btn" data-size="L">L</button>
              </div>
              <button class="buy-btn">Buy Shorts</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="split-right">
    <div class="split-content">
      <div class="section-header">
        <h2>Matrix</h2>
        <p>
          Enter the digital realm where code becomes art. Immerse yourself in a world of flowing data and cyberpunk
          aesthetics.
        </p>
      </div>

      <div class="product-display">
        <div class="product-item">
          <div class="product-layout">
            <img
              src="{{ 'trainerph.png' | asset_url }}"
              alt="Matrix Trainers"
              class="product-image"
              width="150"
              height="150"
            >
            <div class="product-controls">
              <h3 class="product-title">Matrix Trainers</h3>
              <div class="size-selector">
                <button class="size-btn" data-size="S">S</button>
                <button class="size-btn" data-size="M">M</button>
                <button class="size-btn" data-size="L">L</button>
              </div>
              <button class="buy-btn">Buy Trainers</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
